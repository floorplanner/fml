<?xml version="1.0" standalone="no"?>
<svg
   xmlns:dc="http://purl.org/dc/elements/1.1/"
   xmlns:cc="http://creativecommons.org/ns#"
   xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
   xmlns:svg="http://www.w3.org/2000/svg"
   xmlns="http://www.w3.org/2000/svg"
   width="<%=  Floorplanner.config['svg']['width']  %>px"
   height="<%= Floorplanner.config['svg']['height'] %>px"
   version="1.1"
   id="svg2">

  <metadata id="metadata39">
    <rdf:RDF>
      <cc:Work
         rdf:about="">
        <dc:format>image/svg+xml</dc:format>
        <dc:type
           rdf:resource="http://purl.org/dc/dcmitype/StillImage" />
        <dc:title><%= @name %></dc:title>
        <dc:creator>
          <cc:Agent>
            <dc:title><%= @author %></dc:title>
          </cc:Agent>
        </dc:creator>
        <dc:publisher>
          <cc:Agent>
            <dc:title>Floorplanner.com</dc:title>
          </cc:Agent>
        </dc:publisher>
      </cc:Work>
    </rdf:RDF>
  </metadata>
  <g id="areas"><%
  @areas.each do |area| %>
  <polygon points="<%= area.vertices.collect{|v| [(v.x+mod_x)*ratio,(v.y+mod_y)*ratio].join(',')}.join(' ') %>" style="fill:<%= area.color %>;stroke-width:1;stroke:rgb(100,100,100);stroke-linejoin:round;stroke-dasharray:1, 1;stroke-dashoffset:0"/><% end %>
  </g>
  <g id="walls"><% 
  @walls.each do |wall| %>
  <polygon points="<%= wall.outline.vertices.collect{|v| [(v.x+mod_x)*ratio,(v.y+mod_y)*ratio].join(',')}.join(' ') %>" style="fill:<%= wall.color %>;stroke-width:1;stroke:rgb(0,0,0);stroke-linejoin:round"/><% end %>
  </g>
</svg>
