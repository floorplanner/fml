v <%= [v.x,v.z,v.y].join(' ') %><% end %>
<% 
  @walls.faces.each do |f|
    v = [
      @walls.vertices.index(f.vertices[0]),
      @walls.vertices.index(f.vertices[1]),
      @walls.vertices.index(f.vertices[2])
    ] 
    if v.compact.length == 3 %>
f <%= v.collect{|w|w+1}.join(' ') %><% end ; end %>
