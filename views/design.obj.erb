# Floorplanner.com
# <%= @name %><% verts = @areas.vertices+@walls.vertices %>
<% verts.each do |v| %>
v <%= [v.x,-v.z,v.y].join(' ') %><% end %>
<% 
  (@areas.faces+@walls.faces).each do |f|
    v = [
      verts.index(f.vertices[0]),
      verts.index(f.vertices[1]),
      verts.index(f.vertices[2])
    ] 
    if v.compact.length == 3 %>
f <%= v.collect{|w|w+1}.join(' ') %><% end ; end %>
